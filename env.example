# Eppur Si Muove - Environment Configuration
# Copy this file to .env and update the values

# ==================================
# Directus CMS Configuration
# ==================================

# Security Keys (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -base64 32
DIRECTUS_KEY=replace-with-random-value-min-32-chars
DIRECTUS_SECRET=replace-with-random-value-min-32-chars

# Admin User Credentials
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=change-me-in-production

# Database Configuration
DIRECTUS_DB_NAME=directus
DIRECTUS_DB_USER=directus
DIRECTUS_DB_PASSWORD=change-me-in-production

# ==================================
# Application URLs
# ==================================

# Frontend URL
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8055

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ==================================
# Development/Production
# ==================================

NODE_ENV=development

# ==================================
# CORS Configuration
# ==================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
