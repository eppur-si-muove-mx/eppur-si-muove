# Eppur Si Muove - Environment Configuration
# Copy this file to .env and update the values

# ==================================
# Directus CMS Configuration
# ==================================

# Security Keys (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -base64 32
DIRECTUS_KEY=replace-with-random-value-min-32-chars
DIRECTUS_SECRET=replace-with-random-value-min-32-chars

# Admin User Credentials
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=change-me-in-production

# Database Configuration
DIRECTUS_DB_NAME=directus
DIRECTUS_DB_USER=directus
DIRECTUS_DB_PASSWORD=change-me-in-production

# Cache Configuration
DIRECTUS_CACHE_ENABLED=true
DIRECTUS_CACHE_AUTO_PURGE=true

# WebSocket Configuration
DIRECTUS_WEBSOCKETS_ENABLED=true

# CORS Configuration for Directus
DIRECTUS_CORS_ENABLED=true
DIRECTUS_CORS_ORIGIN=https://app.localhost,https://api.localhost

# Public URL for Directus (HTTPS via Caddy)
DIRECTUS_PUBLIC_URL=https://cms.localhost

# Cookie Configuration (HTTPS enabled for Caddy)
DIRECTUS_REFRESH_TOKEN_COOKIE_SECURE=true
DIRECTUS_REFRESH_TOKEN_COOKIE_SAME_SITE=lax
DIRECTUS_REFRESH_TOKEN_COOKIE_DOMAIN=.localhost
DIRECTUS_SESSION_COOKIE_SECURE=true
DIRECTUS_SESSION_COOKIE_SAME_SITE=lax
DIRECTUS_SESSION_COOKIE_DOMAIN=.localhost

# Extensions Configuration
DIRECTUS_EXTENSIONS_PATH=./extensions
DIRECTUS_EXTENSIONS_AUTO_RELOAD=true

# Content Security Policy
DIRECTUS_CSP_FRAME_SRC=https://app.localhost,https://api.localhost

# Logging
DIRECTUS_LOG_LEVEL=info

# ==================================
# Application URLs (HTTPS via Caddy)
# ==================================

# Frontend URLs - Use HTTPS for full stack with Caddy
NEXT_PUBLIC_API_URL=https://api.localhost
NEXT_PUBLIC_DIRECTUS_URL=https://cms.localhost

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# ==================================
# Development/Production
# ==================================

NODE_ENV=development

# ==================================
# CORS Configuration
# ==================================

# Comma-separated list of allowed origins (HTTPS)
CORS_ORIGINS=https://app.localhost,https://cms.localhost
